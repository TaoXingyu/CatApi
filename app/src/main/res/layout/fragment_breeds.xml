<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BreedsFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/breedsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
        android:id="@+id/textview_breedName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Name"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/textview_breedOrigin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Origin"/>
    <TextView
        android:id="@+id/textview_breedDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Description"/>
    <TextView
        android:id="@+id/textview_breedTemperament"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Temperament"/>
    </androidx.recyclerview.widget.RecyclerView>
</FrameLayout>